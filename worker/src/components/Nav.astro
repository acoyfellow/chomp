---
const { active = '' } = Astro.props
const links = [
  { href: '/', label: 'Home' },
  { href: '/docs', label: 'Tutorial' },
  { href: '/docs/reference', label: 'Reference' },
  { href: '/docs/guides', label: 'Guides' },
  { href: '/docs/concepts', label: 'Concepts' },
]
---
<nav class="border-b border-zinc-200 dark:border-zinc-800">
  <div class="max-w-4xl mx-auto px-6 flex items-center gap-8 h-16">
    <a href="/" class="text-lg font-bold tracking-tight shrink-0">chomp<span class="text-gold">.</span></a>
    <div class="flex gap-2 overflow-x-auto text-sm font-medium">
      {links.map(l => (
        <a
          href={l.href}
          class:list={[
            'px-3 py-1.5 rounded-lg whitespace-nowrap transition-colors',
            active === l.href
              ? 'bg-zinc-900 text-white dark:bg-zinc-100 dark:text-zinc-900'
              : 'text-zinc-500 hover:text-zinc-900 dark:hover:text-zinc-100'
          ]}
        >{l.label}</a>
      ))}
    </div>
    <button id="theme-toggle" onclick="toggleTheme()" aria-label="Toggle theme" class="ml-auto shrink-0 w-8 h-8 rounded-full border border-zinc-200 dark:border-zinc-700 flex items-center justify-center text-zinc-400 text-sm cursor-pointer">â˜¾</button>
  </div>
</nav>
