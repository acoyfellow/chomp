---
import '../styles/global.css'
import SEO from '../components/SEO.astro'

interface Props {
  title?: string
  description?: string
  path?: string
  type?: 'website' | 'article'
  keywords?: string
  class?: string
}

const {
  title = 'chomp',
  description = 'Two routers. 50+ free models. Zero cost.',
  path = '/',
  type = 'website',
  keywords = '',
  class: className = '',
} = Astro.props

// SSR: read theme cookie
const themeCookie = Astro.cookies.get('theme')?.value
const ssrDark = themeCookie === 'dark'
const ssrLight = themeCookie === 'light'
// If cookie is set, we know. If not, client script handles system pref.
const htmlClass = ssrDark ? 'dark' : undefined
---
<!DOCTYPE html>
<html lang="en" class={htmlClass}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  <!-- Favicon -->
  <link rel="icon" href="/favicon.ico" sizes="48x48" />
  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  <!-- PWA -->
  <link rel="manifest" href="/manifest.json" />
  <meta name="theme-color" content="#c8a630" media="(prefers-color-scheme: light)" />
  <meta name="theme-color" content="#18181b" media="(prefers-color-scheme: dark)" />
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Sora:wght@400;600;700&display=swap" rel="stylesheet" />
  <SEO
    title={title}
    description={description}
    path={path}
    type={type}
    keywords={keywords}
  />
  <script is:inline>
    (function(){
      var d=document.documentElement,c=d.classList;
      // Read cookie (already set by SSR class, but handle no-cookie + system pref)
      var saved=(document.cookie.match(/(?:^|;)\s*theme=(\w+)/)||[])[1];
      if(!saved){
        // No cookie: use system preference, don't set cookie (respect system)
        if(window.matchMedia('(prefers-color-scheme:dark)').matches){
          c.add('dark');
        }else{
          c.remove('dark');
        }
      }
      // Migrate localStorage users to cookie
      var ls=localStorage.getItem('theme');
      if(ls&&!saved){
        document.cookie='theme='+ls+';path=/;max-age=31536000;SameSite=Lax';
        localStorage.removeItem('theme');
        if(ls==='dark')c.add('dark');else c.remove('dark');
      }
      // Update toggle icon
      function syncIcon(){
        var btn=document.getElementById('theme-toggle');
        if(btn)btn.textContent=c.contains('dark')?'\u2600':'\u263E';
      }
      window.toggleTheme=function(){
        c.toggle('dark');
        var next=c.contains('dark')?'dark':'light';
        document.cookie='theme='+next+';path=/;max-age=31536000;SameSite=Lax';
        syncIcon();
      }
      // Sync icon after DOM ready
      if(document.readyState==='loading'){
        document.addEventListener('DOMContentLoaded',syncIcon);
      }else{
        syncIcon();
      }
    })()
  </script>
</head>
<body class:list={['bg-zinc-50 text-zinc-900 dark:bg-zinc-950 dark:text-zinc-50 font-sora antialiased', className]}>
  <slot />
</body>
</html>
